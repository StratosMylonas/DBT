<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stratos.dbtv02.MedBook$PlaceholderFragment">


    <ImageView
        app:srcCompat="@drawable/empty_profile"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp" />


    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/n4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/n4"
        android:layout_alignParentStart="true"
        android:id="@+id/editName"
        android:layout_alignParentEnd="true"
        android:textColorLink="@color/colorPrimaryDark" />

    <TextView
        android:text="Surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editName"
        android:layout_alignParentStart="true"
        android:id="@+id/n5" />

        <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editSurname"
        android:layout_alignParentStart="true"
        android:id="@+id/n6" />

    <TextView
        android:text="City/State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editAddress"
        android:id="@+id/n7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/n7"
        android:layout_alignParentStart="true"
        android:id="@+id/editCity"
        android:layout_alignParentEnd="true"
        android:textColorLink="@color/colorPrimaryDark" />

    <TextView
        android:text=" Postal Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCity"
        android:layout_alignParentStart="true"
        android:id="@+id/n8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/n8"
        android:layout_alignParentStart="true"
        android:id="@+id/editPostal"
        android:layout_alignParentEnd="true"
        android:textColorLink="@color/colorPrimaryDark" />

    <TextView
        android:text="E-Mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPostal"
        android:layout_alignParentStart="true"
        android:id="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:id="@+id/editMail"
        android:layout_alignParentEnd="true"
        android:textColorLink="@color/colorPrimaryDark" />

    <TextView
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editMail"
        android:layout_alignParentStart="true"
        android:id="@+id/textView12" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:id="@+id/editPhone"
        android:layout_alignParentEnd="true"
        android:textColorLink="@color/colorPrimaryDark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:id="@+id/editMobile"
        android:layout_alignParentEnd="true"
        android:textColorLink="@color/colorPrimaryDark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editAddress"
        android:layout_below="@+id/n6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColorLink="@color/colorPrimaryDark" />

    <TextView
        android:text="Mobile Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/editPhone"
        android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editSurname"
            android:textColorLink="@color/colorPrimaryDark"
            android:layout_below="@+id/n5"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/displayBtn"

            android:text="SAVE"
            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/save_button"
            android:layout_below="@+id/editMobile"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>

</RelativeLayout>

